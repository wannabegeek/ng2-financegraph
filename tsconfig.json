{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es6", "es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true
    // "strictNullChecks": true
  },
  "include": [
    "src/*",
    "src/**/*"
  ],
  "exclude": [
    "example",
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./dist",
    "strictMetadataEmit": true
  }
}
